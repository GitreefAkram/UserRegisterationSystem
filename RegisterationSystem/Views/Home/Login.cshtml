@model RegisterationSystem.Models.tbl_users
@{
    ViewBag.Title = "Login";
}


<head>
    <link href="~/CustomStyles/LoginStyle.css" rel="stylesheet" />

</head>

<body>

    <div id="LoginFormLayout">

        <div class="row">



            <div class="col-md-6" id="LoginImage">

                <img src="~/Images/login.jpg" alt="Alternate Text " />


            </div>




            <div class="col-md-6" id="LoginForm">


                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                    <h2>Login Form</h2>
                    <div class="form-horizontal">

                        <div class="form-group">

                            <div class="col-md-12">
                                <div class="input-group">

                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user">  </i>   </span>
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" , @placeholder="Username" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                                </div>


                            </div>
                        </div>

                       
                        <div class="form-group">

                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"> <i class="glyphicon glyphicon-lock">  </i></span>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "********" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-6 col-md-12">
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>

           


        </div>


    </div>
</body>
